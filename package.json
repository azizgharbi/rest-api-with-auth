{
  "name": "typescript-rest-api-with-auth",
  "version": "1.0.0",
  "description": "rest api with typescript",
  "main": "index.js",
  "author": "flava",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "watch": "tsc -w",
    "format": "yarn rome format . --write",
    "dev": "nodemon dist/server.js --watch 'dist/**/*.js'"
  },
  "dependencies": {
    "@prisma/client": "4.12.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.1",
    "concurrently": "^8.0.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "^4.12.0",
    "ts-node": "^10.9.1",
    "tsoa": "^5.1.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.20",
    "rome": "^11.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn run format"
    ]
  }
}
